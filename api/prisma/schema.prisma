datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Run `yarn redwood db save` to create migrations
// for the following models

model User {
    id              String  @id  @default(cuid())
    email           String  @unique
    password        String
}

model Profile {
    id              String  @id  @default(cuid())
    name            String  @unique
    bio             String?
    image           String?
    user            User        @relation(fields: [userId], references: [id])
    userId          String      // relation scalar field (used in the `@relation` attribute above)
    following       Profile[]   @relation("UserFollows", references: [id])
    followers       Profile[]   @relation("UserFollows", references: [id])
}

model Article {
    id              String  @id  @default(cuid())
    title           String
    description     String
    body            String
    comments        Comment[]
    tags            Tag[]
    author          Profile   @relation(name: "ArticleAuthor", fields:[authorId], references:[id])
    authorId        String
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
}

model Comment {
    id              String  @id  @default(cuid())
    body            String
    author          Profile  @relation(fields: [authorId], references: [id])
    authorId        String
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
}

model Tag {
    id              String  @id  @default(cuid())
    name            String  @unique
    articles        Article[]
}
